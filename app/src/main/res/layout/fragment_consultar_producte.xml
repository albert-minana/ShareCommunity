<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.ConsultarClasseFragment">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:orientation="vertical">

                <Button
                    android:id="@+id/botoCompartir"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="@string/text_compartir"
                    android:textAlignment="center"
                    app:icon="@drawable/ic_share" />

                <TextView
                    android:id="@+id/nomProducte"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="false"
                    android:fontFamily="sans-serif-black"
                    android:text="@string/Nom"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="26sp" />

                <ImageView
                    android:id="@+id/imatgeProducte"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:baselineAlignBottom="false"
                    android:clickable="false"
                    android:src="@drawable/ic_menu_products"/>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/textInputLayoutDescripcioProducte"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/text_descripció"
                    app:errorEnabled="true">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/TextInputEditTextDescripcioProducte"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#00FFFFFF"
                        android:clickable="false"
                        android:cursorVisible="false"
                        android:drawableLeft="@drawable/ic_description"
                        android:drawablePadding="10dp"
                        android:ems="10"
                        android:focusable="false"
                        android:inputType="textPersonName"
                        android:text="@string/text_descripció" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/textInputLayoutUbicacioProducte"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/Ubicacio"
                    app:errorEnabled="true">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/TextInputEditTextUbicacioProducte"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#00FFFFFF"
                        android:clickable="false"
                        android:cursorVisible="false"
                        android:drawableLeft="@drawable/ic_location"
                        android:drawablePadding="10dp"
                        android:ems="10"
                        android:focusable="false"
                        android:inputType="textPersonName"
                        android:text="@string/Ubicacio" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/textInputLayoutEstatProducte"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/estat"
                    app:errorEnabled="true">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/TextInputEditTextEstatProducte"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#00FFFFFF"
                        android:clickable="false"
                        android:cursorVisible="false"
                        android:drawableLeft="@drawable/ic_state"
                        android:drawablePadding="10dp"
                        android:ems="10"
                        android:focusable="false"
                        android:inputType="textPersonName"
                        android:text="@string/estat" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/textInputLayoutDataProducte"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/DataPublicacio"
                    app:errorEnabled="true">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/TextInputEditTextDataProducte"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#00FFFFFF"
                        android:clickable="false"
                        android:cursorVisible="false"
                        android:drawableLeft="@drawable/ic_profile_birthday"
                        android:drawablePadding="10dp"
                        android:ems="10"
                        android:focusable="false"
                        android:inputType="textPersonName"
                        android:text="@string/DataPublicacio" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/textInputLayoutEmailProducte"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/EmailUsuari"
                    app:errorEnabled="true">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/TextInputEditTextEmailProducte"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#00FFFFFF"
                        android:clickable="false"
                        android:cursorVisible="false"
                        android:drawableLeft="@drawable/ic_profile_email"
                        android:drawablePadding="10dp"
                        android:ems="10"
                        android:focusable="false"
                        android:inputType="textPersonName"
                        android:text="@string/EmailUsuari" />
                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingLeft="50dp"
                    android:text="@string/tipus"
                    android:textSize="12sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="0dp">

                    <TextView
                        android:id="@+id/textView7"
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:drawableTop="@drawable/ic_profile_categories"
                        android:paddingStart="8dp"
                        android:paddingTop="12dp" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/textInputLayoutTipusProducte"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="0dp"
                        app:hintAnimationEnabled="false"
                        app:hintEnabled="false"
                        app:placeholderText=" ">

                        <RadioGroup
                            android:id="@+id/TypeSelection"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="-22dp"
                            android:hapticFeedbackEnabled="false"
                            android:orientation="horizontal"
                            android:transitionGroup="false">

                            <RadioButton
                                android:id="@+id/Tipus_Roba"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.25"
                                android:focusable="false"
                                android:cursorVisible="false"
                                android:clickable="false"
                                android:text="@string/Tipus_Roba"
                                android:textColor="@color/radiobuttonstate"
                                android:textSize="16sp" />

                            <RadioButton
                                android:id="@+id/Tipus_Material"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.25"
                                android:focusable="false"
                                android:cursorVisible="false"
                                android:clickable="false"
                                android:text="@string/Tipus_Material"
                                android:textColor="@color/radiobuttonstate"
                                android:textSize="16sp" />

                            <RadioButton
                                android:id="@+id/Tipus_Joguina"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.25"
                                android:focusable="false"
                                android:cursorVisible="false"
                                android:clickable="false"
                                android:text="@string/Tipus_Joguina"
                                android:textColor="@color/radiobuttonstate"
                                android:textSize="16sp" />

                            <RadioButton
                                android:id="@+id/Tipus_Altre"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.25"
                                android:focusable="false"
                                android:cursorVisible="false"
                                android:clickable="false"
                                android:text="@string/Tipus_Altre"
                                android:textColor="@color/radiobuttonstate"
                                android:textSize="16sp"
                                app:errorEnabled="true" />

                        </RadioGroup>
                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/LinearLayoutButtons"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_weight="3"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <Button
                        android:id="@+id/eliminarProducte"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="2dp"
                        android:layout_marginRight="2dp"
                        android:layout_weight="1"
                        android:text="@string/eliminar"
                        app:icon="@drawable/ic_cancel"
                        app:iconGravity="top" />

                    <Button
                        android:id="@+id/editarProducte"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="2dp"
                        android:layout_marginRight="2dp"
                        android:layout_weight="1"
                        android:text="@string/editar"
                        app:icon="@drawable/ic_edit"
                        app:iconGravity="top" />

                    <Button
                        android:id="@+id/finalitzarProducte"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="2dp"
                        android:layout_marginRight="2dp"
                        android:layout_weight="1"
                        android:text="@string/finalitzar"
                        app:icon="@drawable/ic_confirmed"
                        app:iconGravity="top" />
                </LinearLayout>

            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>